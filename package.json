{
  "name": "ngoc-rong-discord-bot",
  "version": "1.0.0",
  "description": "Discord RPG bot inspired by Dragon Ball",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:migrate": "docker exec -i ngoc_rong_db psql -U postgres -d ngoc_rong_db",
    "db:optimize": "docker exec -i ngoc_rong_db psql -U postgres -d ngoc_rong_db < database/optimize.sql",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f bot",
    "test:jobs": "ts-node test-jobs.ts",
    "test:webhook": "ts-node test-webhook.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "discord",
    "bot",
    "rpg",
    "dragon-ball"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.9",
    "bullmq": "^5.30.3",
    "discord.js": "^14.17.3",
    "dotenv": "^16.4.7",
    "ioredis": "^5.4.2",
    "pg": "^8.13.1",
    "rate-limiter-flexible": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
