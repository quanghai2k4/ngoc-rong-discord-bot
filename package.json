{
  "name": "ngoc-rong-discord-bot",
  "version": "1.0.0",
  "description": "Discord RPG bot inspired by Dragon Ball",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:migrate": "docker exec -i ngoc_rong_db psql -U postgres -d ngoc_rong_db",
    "db:optimize": "docker exec -i ngoc_rong_db psql -U postgres -d ngoc_rong_db < database/optimize.sql",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f bot",
    "test:jobs": "ts-node test-jobs.ts",
    "test:webhook": "ts-node test-webhook.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "discord",
    "bot",
    "rpg",
    "dragon-ball"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bullmq": "^5.63.2",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "ioredis": "^5.8.2",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^8.2.1"
  },
  "devDependencies": {
    "@types/ioredis": "^4.28.10",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
